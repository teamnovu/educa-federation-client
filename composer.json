{
    "name": "teamnovu/educa-federation-client",
    "description": "",
    "keywords": [
        "teamnovu",
        "saml-client"
    ],
    "homepage": "https://github.com/teamnovu/saml-client",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Oliver Kaufmann",
            "email": "kaufmann@novu.ch",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "lightsaml/lightsaml": "^1.4",
        "onelogin/php-saml": "^3.1",
        "phpseclib/phpseclib": "^2.0.16"
    },
    "require-dev": {
        "nunomaduro/collision": "^3.0",
        "phpunit/phpunit": "^7.5"
    },
    "autoload": {
        "psr-4": {
            "Teamnovu\\SamlClient\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Teamnovu\\SamlClient\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
